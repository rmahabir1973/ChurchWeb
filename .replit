modules = ["nodejs-20"]
[nix]
channel = "stable-25_05"
packages = ["unzip"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Church Web Global Server"

[[workflows.workflow]]
name = "Church Web Global Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node church-web-global/server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 32875
externalPort = 3000

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "node church-web-global/server.js"]
